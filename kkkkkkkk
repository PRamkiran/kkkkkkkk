10a)
<!DOCTYPE html>
<html>
<body>
<h2>JavaScript Objects</h2>
<p id="demo"></p>
<script>
function Person(first, last, age, year) {
this.firstName = first;
this.lastName = last;
this.age = age;
this.year = year;
}
Person.prototype.College = "SRKREC";
const people = new Person("Harsha", "Vardhan", 20, "Two");
document.getElementById("demo").innerHTML =
"Harsha is studying in " + people.College; 
</script>
</body>
</html>

11a)
<!DOCTYPE html>
<html>
<body>
<h1>JavaScript Arrays</h1>
<p id="demo"></p>
<p id="demo1"></p>
<p id="demo2"></p>
<script>
const fruits = ["Banana", "Orange", "Apple", "Mango"];
fruits.pop();
document.getElementById("demo").innerHTML = fruits;
fruits.push("Kiwi");
document.getElementById("demo1").innerHTML = fruits;
fruits.shift();
document.getElementById("demo2").innerHTML = fruits;
</script>
</body>
</html>

12a)
<!DOCTYPE html>
<html>
<body>
<h2>JavaScript Arrays</h2>
<h3>splice</h3>
<p id="demo"></p>
<script>
const fruits = ["Banana", "Orange", "Apple", "Mango"];
// At position 2, add 2 elements: 
fruits.splice(2, 0, "Lemon", "Kiwi");
document.getElementById("demo").innerHTML = fruits;
</script>
<h3>slice</h3>
<p id="demo1"></p>
<script>
const fruits1 = ["Banana", "Orange", "Lemon", "Apple", "Mango"];
const citrus = fruits.slice(1, 3);
document.getElementById("demo1").innerHTML = citrus;
</script>
</body>
</html>

13a)
<!DOCTYPE html>
<html>
<body>
<h1>JavaScript Arrays</h1>
<h2>map() Method</h2>
<p id="demo"></p>
<script>
const numbers = [4, 9, 16, 25];
document.getElementById("demo").innerHTML = numbers.map(Math.sqrt);
</script>
<h2>filter() Method</h2>
<p id="demo1"></p>
<script>
const ages = [32, 33, 16, 40];
document.getElementById("demo1").innerHTML = ages.filter(checkAdult);
function checkAdult(age) {
  return age >= 18;
}
</script>
</body>
</html>



INSERT

    <?php  
    $server="localhost";
    $user="root";
    $pass="";
    $dbname="srkr";
    $con =mysqli_connect($server,$user,$pass,$dbname);
    if(!$con)
    {
        die("Error : :  ".mysqli_connect_error());
    }
    $sql = "INSERT INTO student VALUES ('{$_POST['id']}','{$_POST['name']}','{$_POST['marks']}')";
    $res = mysqli_query($con,$sql);
    if($res)
    {
       $sql2="select * from student";
       $sres=mysqli_query($con,$sql2);
       echo "<table border=1> 
               <tr> 
                <th>ID</th>
                <th>Name</th>
                <th>Marks</th>
               </tr>";
       while($row= mysqli_fetch_array($sres))
       {
           echo "<tr>";
           echo "<td>".$row[0]."</td>";
           echo "<td>".$row[1]."</td>";
           echo "<td>".$row[2]."</td>";
           echo "</tr>";
       }
       echo "</table>";

    }
    else
    {
        echo "Issue with query";
    }
    mysqli_close($con);
?>
	HTML:
		<html>
    <body>
        <form action="insert.php" method="post">
            ID <input type="text" name="id"/><br>
            Name <input type="text" name="name"/><br>
            Marks <input type="text" name="marks"/><br>
            <input type="submit" value="insert"/><br>
        </form>
    </body>
</html>

UPDATE
	<?php  
    $server="localhost";
    $user="root";
    $pass="";
    $dbname="srkr";
    $con =mysqli_connect($server,$user,$pass,$dbname);
    if(!$con)
    {
        die("Error : :  ".mysqli_connect_error());
    }
    $sql = "UPDATE busreservation SET BusNo='{$_POST['BusNo']}',source='{$_POST['Source']}',dest='{$_POST['dest']}',Arrtime='{$_POST['arrtime']}' WHERE id='{$_POST['id']}'";
    $res = mysqli_query($con,$sql);
 
    if($res)
    {
       $sql2="select * from busreservation";
       $sres=mysqli_query($con,$sql2);
       echo "<table border=1> 
               <tr> 
                <th>BusNo</th>
                <th>Source</th>
                <th>dest</th>
               <th>Arrtime</th>
		</tr>";
       while($row= mysqli_fetch_array($sres))
       {
           echo "<tr>";
           echo "<td>".$row[0]."</td>";
           echo "<td>".$row[1]."</td>";
           echo "<td>".$row[2]."</td>";
	   echo "<td>".$row[3]."</td>";	
           echo "</tr>";
       }
       echo "</table>";

    }
   
else
{ 
  echo "Issue with query";
    }
    mysqli_close($con);

?>
HTML:
	<html>
    <body>
        <form action="update.php" method="post">
            ID <input type="text" name="id"/><br>
            BUSNO <input type="text" name="BusNo"/><br>
            Source <input type="text" name="source"/><br>
            Dest<input type="text" name="dest"/><br>            
          ArrTime <input type="text" name="arrtime"/><br>
<input type="submit" value="update"/><br>
        </form>
